OUTPUT_FORMAT("elf32-littlearm", "elf32-littlearm", "elf32-littlearm")
OUTPUT_ARCH(arm)
ENTRY(_start)

SECTIONS
{
	/* BASE_ADDR will be replaced with definition in Makefile by cpp */
	. = BASE_ADDR;
	.reset : {
	       KEEP(*(.reset));
	}

	. = ALIGN(32);
	.text : {
	      KEEP(*(.text));
	}

	. = ALIGN(32);
	.rodata : {
		 KEEP(*(.rodata));
	}

	. = ALIGN(32);
	.data : { 
	      KEEP(*(.data));
	}

	. = ALIGN(32);
	_bin_end = .;

	. = ALIGN(32);

	.bss : { 
		_bss_start = .;
		KEEP(*(.bss*));
		_bss_end = .;
	}

	. = ALIGN(32);
	_heap_start = .;
}